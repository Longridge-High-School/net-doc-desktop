<Window x:Class="net_doc_desktop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:net_doc_desktop"
        mc:Ignorable="d"
        Icon="/Resources/icon.ico"
        Title="Net Doc Desktop Settings" Height="400" Width="400" ResizeMode="NoResize">

    <StackPanel>
        <Label Content="Base Net Doc URL:" Margin = "10 0 10 0"/>
        <TextBox Name="UrlBox" Margin = "10 0 10 10"/>
        <Label Content="Config File Path:" Margin = "10 0 10 0"/>
        <TextBox Name="FilePath" Margin = "10 0 10 10"/>
        <Button Click="Apply" Margin = "10 20 10 5">Apply Changes and Restart</Button>
        <Button Click="Cancel" Margin = "10 5 10 0">Cancel</Button>
    </StackPanel>
</Window>